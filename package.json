{
  "name": "college-athlete-base",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "docker:build": "docker build -t college-athlete-base .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:local:start": "docker-compose up -d db",
    "db:local:stop": "docker-compose stop db",
    "db:local:reset": "docker-compose down -v && docker-compose up -d db",
    "db:local:logs": "docker-compose logs -f db",
    "db:local:psql": "docker-compose exec db psql -U postgres -d college_athlete_base",
    "db:migrate": "echo \"Database migrations will be configured in a future task\"",
    "db:migration:create": "echo \"Database migration creation will be configured in a future task\"",
    "db:migrate:local": "./scripts/db-migrate-local.sh",
    "db:seed:local": "./infrastructure/database/seeds/seed.sh local",
    "db:reset:local": "npm run db:local:reset && echo \"Database reset. Run migrations and seeds when available.\"",
    "db:migrate:dev": "./scripts/db-migrate.sh dev up",
    "db:migrate:prod": "./scripts/db-migrate.sh prod up",
    "db:seed:dev": "./infrastructure/database/seeds/seed.sh dev",
    "db:seed:prod": "./scripts/db-seed.sh prod",
    "db:backup:dev": "./scripts/backup-database.sh dev",
    "db:backup:prod": "./scripts/backup-database.sh prod",
    "db:restore:dev": "./scripts/restore-database.sh dev",
    "db:restore:prod": "./scripts/restore-database.sh prod",
    "deploy:dev": "./scripts/deploy-environment.sh dev",
    "deploy:prod": "./scripts/deploy-environment.sh prod",
    "teardown:dev": "./scripts/teardown-environment.sh dev",
    "teardown:prod": "./scripts/teardown-environment.sh prod",
    "health:dev": "./scripts/health-check.sh collegeathletebase-dev.com",
    "health:prod": "./scripts/health-check.sh collegeathletebase.com",
    "perf:smoke": "./scripts/performance-test.sh collegeathletebase-dev.com smoke",
    "perf:load": "./scripts/performance-test.sh collegeathletebase-dev.com load",
    "perf:stress": "./scripts/performance-test.sh collegeathletebase-dev.com stress",
    "perf:spike": "./scripts/performance-test.sh collegeathletebase-dev.com spike",
    "dev:setup": "./scripts/get-dev-credentials.sh",
    "dev:test": "./scripts/test-local-setup.sh",
    "dev:test-aws": "./scripts/test-aws-connection.sh",
    "logs": "./scripts/view-logs.sh",
    "logs:follow": "./scripts/view-logs.sh --follow",
    "logs:error": "./scripts/view-logs.sh --level error",
    "logs:docker": "docker-compose logs -f",
    "db:test": "./scripts/test-local-database-workflow.sh",
    "db:switch:local": "./scripts/switch-db.sh local",
    "db:switch:aws": "./scripts/switch-db.sh aws",
    "branch-protection:configure": "./scripts/configure-branch-protection.sh",
    "branch-protection:verify": "./scripts/verify-branch-protection.sh",
    "branch-protection:test": "./scripts/test-branch-protection-scripts.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.3",
    "next": "^15.1.6",
    "pg": "^8.16.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.1.6",
    "eslint-plugin-complexity": "^1.0.2",
    "eslint-plugin-sonarjs": "^0.25.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "optionalDependencies": {
    "@next/swc-darwin-arm64": "^15.1.6",
    "@next/swc-darwin-x64": "^15.1.6",
    "@next/swc-linux-x64-gnu": "^15.1.6",
    "@next/swc-linux-x64-musl": "^15.1.6",
    "@next/swc-win32-x64-msvc": "^15.1.6"
  }
}
